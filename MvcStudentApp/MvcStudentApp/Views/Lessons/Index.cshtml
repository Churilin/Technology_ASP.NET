@model IEnumerable<MvcStudentApp.Models.Lesson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Добавить предмет", "Create")</a></li>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.LessonId }) |
                    @Html.ActionLink("Подробнее", "Details", new { id = item.LessonId }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.LessonId })
            </td>
        </tr>
}
    </tbody>
</table>
