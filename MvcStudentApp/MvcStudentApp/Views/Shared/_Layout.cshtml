<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcStudentApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcStudentApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Главная", "Index", "Home")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Добавить студента", "Create", "Students")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Посмотреть список успеваемости", "Index", "Students")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Добавить предмет", "Create", "Lessons")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Список предметов", "Index", "Lessons")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Сумма баллов", "SumScore", "Students")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Топ 5 лучших студентов", "TopFiveStudents", "Students")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("5 худших студентов", "BedStudents", "Students")</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Экспорт в текстовый файл", "Export", "Students")</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Система учета успеваимости студентов- <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
