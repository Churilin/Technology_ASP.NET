@model IEnumerable<MvcStudentApp.Models.Student>

@{
    ViewData["Title"] = "BedStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


<h2>Пять непутевых студентов</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Учебная дисциплина</th>
            <th>Оценка</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Lesson.Name</td>
                <td>@student.Score</td>
            </tr>
        }
    </tbody>
</table>

<li class="nav-item"><a class="nav-link text-dark" @Html.ActionLink("Вернуться к списку", "Index")</a></li>
